@model List<airbnb.Models.Reservation>

@{
    ViewData["Title"] = "Evime Yapılan Yorumlar";
}

<h2>Evlerime Yapılan Yorumlar</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Henüz hiçbir yorum yapılmamış.</div>
}
else
{
    <div class="list-group">
        @foreach (var r in Model)
        {
            <div class="list-group-item mb-2">
                <h5 class="mb-1">
                    <a asp-controller="Houses" asp-action="Details" asp-route-id="@r.House.HouseId"
                        class="text-decoration-none">
                        @r.House.Title
                    </a>
                </h5>

                <p class="mb-1">
                    <span class="text-warning">⭐ @r.Review.Rating / 5</span><br />
                    <span>@r.Review.Comment</span>
                </p>
                <small class="text-muted">Yorum Tarihi: @r.Review.CreatedAt.ToShortDateString()</small>
            </div>
        }
    </div>
}
